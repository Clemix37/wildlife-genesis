{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "app",
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules"]
}